<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserClient">
    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar"
        style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
        android:layout_width="410dp"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:backgroundTint="#c9daf8"
        android:gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="BottomAppBar,MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="27dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/home4" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="Home"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/settings6" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="56dp"
                    android:layout_height="wrap_content"
                    android:text="Setting"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/user7" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="53dp"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/schedules1" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="Schedual"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/logout1" />
                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:text="LogOut"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textStyle="bold" />



            </LinearLayout>
        </LinearLayout>


    </com.google.android.material.bottomappbar.BottomAppBar>


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="164dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="-4dp"
                    tools:layout_editor_absoluteY="0dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/constraintLayout"
                        android:layout_width="417dp"
                        android:layout_height="169dp"
                        android:background="@drawable/top_background"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="384dp"
        android:layout_height="443dp"
        android:layout_margin="15dp"
        android:layout_marginBottom="201dp"
        android:layout_weight="0.3333"
        android:background="@drawable/withe1_background"
        android:elevation="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scrollView2"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/Search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Search"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/location"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="374dp"
            android:layout_height="82dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="25dp"
            android:hint="Location"
            android:textColorHint="#000000"
            app:helperTextTextColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Search">

            <AutoCompleteTextView
                android:id="@+id/locationEdit"
                android:layout_width="341dp"
                android:layout_height="45dp"
                android:drawableLeft="@drawable/ic_baseline_location_on_24"
                android:drawablePadding="16dp"
                android:hint="Location"
                android:inputType="none"

                android:paddingLeft="14dp"

                android:textColorHint="#000000" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/domain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:padding="16dp"
            android:paddingVertical="1dp"
            android:paddingBottom="15dp"
            android:text="Choose a domain"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.627"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Search"
            tools:ignore="MissingConstraints" />


        <Button
            android:id="@+id/Babysitter"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:layout_marginTop="1dp"
            android:background="@drawable/grey_button_background"
            android:padding="5dp"
            android:paddingHorizontal="10dp"
            android:text="Babysitter"

            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="11sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.346"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/domain"
            tools:ignore="MissingConstraints" />


        <Button
            android:id="@+id/HouseKeeper"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/grey_button_background"
            android:paddingHorizontal="10dp"
            android:text="HouseKeeper "
            android:textColor="#000000"
            android:textSize="11sp"
            android:textStyle="normal"
            app:layout_constraintHorizontal_bias="0.960"
            app:layout_constraintTop_toBottomOf="@+id/domain"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/Therapist"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/grey_button_background"
            android:paddingHorizontal="10dp"
            android:text="Therapist"
            android:textColor="#000000"
            android:textSize="11sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.849"
            app:layout_constraintStart_toEndOf="@+id/Babysitter"
            app:layout_constraintTop_toBottomOf="@+id/domain"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/Dogister"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/grey_button_background"
            android:paddingHorizontal="10dp"
            android:text="Dogister"
            android:textColor="#000000"
            android:textSize="11sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toTopOf="@+id/Babysitsdisabilities"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.065"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/domain"
            app:layout_constraintVertical_bias="0.075"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/Babysitsdisabilities"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/grey_button_background"
            android:padding="5dp"
            android:paddingHorizontal="10dp"
            android:text=" babysits disabilities"
            android:textColor="#000000"
            android:textSize="11sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/domain"
            tools:ignore="MissingConstraints" />


    </LinearLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>